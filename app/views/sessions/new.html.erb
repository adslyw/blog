<%=	provide(:title, "Sign in") %>
<div class="row">
	<div class="span6 offset3">
		<%=	 form_for(:session, url: sessions_path) do |f| %>
			<%= f.label :email %><br />
			<%= f.text_field :email%><br />
			<%= f.label :password%><br />
			<%= f.password_field :password%><br />
			<%= f.submit "Sign in", class: "btn btn-primary btn-sm"%>
		<% end %>
	</div>
</div>